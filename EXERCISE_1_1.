        "try:\n",
        "  score = float(input(\"Enter score:\"))\n",
        "except:\n",
        "  print(\"Bad Score\")\n",
        "  quit()\n",
        "\n",
        "if score < 0.0 or score >1.0:\n",
        "  print(\"Bad Score\")\n",
        "elif score >=0.9:\n",
        "  print(\"A\")\n",
        "elif score >=0.8:\n",
        "  print(\"B\")\n",
        "elif score >=0.7:\n",
        "  print(\"C\")\n",
        "elif score >=0.6:\n",
        "  print(\"D\")\n",
        "else:\n",
        "  print(\"F\")"
